page{
  height: 100%;
}

.allbox{
  height: 100%;
  background-color: #edece8;
  text-align: center;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.usermotto {
  margin-top: 200px;
}

.listcontent{
  display: flex;
  width: 100%;
}

navigator{
  width: 100%;
}

.viewlist{
  display: flex;
  width: 100%;
  flex-direction: column;
  justify-content:space-around;
}

.viewtitle{
  font-size: 20px;
  width: 100%;
  padding: 5px;
}

.viewcreator{
  font-size: 10px;
  width: 100%;
  padding: 5px;
}

.divline{
  background: #f2f2f2;
  width: 100%;
  height: 1px;
}

.classcontainer{
  height:calc( 100vh - 145rpx );
  width: 95%;
  margin: 0 auto;
  display: flex;
  flex-direction: row;
  background-color: white;
}

.scrolllist{
  border-right: 1rpx solid #ccc;
  flex-basis: 40%;
}

.listcontent{
  display:flex;
  height: 100%;
  flex-direction: column;
}

.viewlist{
  height:150rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size:30rpx;
}

.showlist{
  display: flex;
  flex-direction: row;
}

.selectit{
  color: #fc5531;
}

.sendnotice{
  display: flex;
  width: 10%;
  font-size: 12px;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  overflow: hidden;

}

.crtforum{
  padding: 5px;
  background-color: white;
  border-bottom: 1rpx solid #ccc;
  width: 95%;
  margin: 0 auto;
  height: 90rpx;
}